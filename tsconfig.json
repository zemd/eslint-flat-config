{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "@zemd/eslint-config",
  "extends": "@zemd/tsconfig/tsconfig-node.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": false,
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
