{
  "name": "@zemd/eslint-rock-stack",
  "version": "1.1.2",
  "license": "Apache-2.0",
  "description": "Shared ESLint config for modern projects",
  "keywords": [
    "eslint-config",
    "eslint-flat-config",
    "eslint",
    "flat config",
    "javascript",
    "typescript",
    "react",
    "tailwindcss"
  ],
  "author": {
    "name": "Dmytro Zelenetskyi",
    "email": "dmytro.zelenetskyi@gmail.com",
    "url": "https://codeandgin.co"
  },
  "homepage": "https://github.com/zemd/eslint-flat-config",
  "repository": {
    "type": "git",
    "url": "https://github.com/zemd/eslint-flat-config.git"
  },
  "bugs": {
    "url": "https://github.com/zemd/eslint-flat-config/issues"
  },
  "files": [
    "dist"
  ],
  "funding": "https://github.com/sponsors/zemd",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./tailwind": {
      "types": "./dist/tailwind.d.ts",
      "import": "./dist/tailwind.js",
      "require": "./dist/tailwind.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "peerDependencies": {
    "eslint": ">=9.2.0",
    "eslint-plugin-tailwindcss": "^3.18.0"
  },
  "peerDependenciesMeta": {
    "eslint-plugin-tailwindcss": {
      "optional": true
    }
  },
  "dependencies": {
    "@graphql-eslint/eslint-plugin": "^4.3.0",
    "@vitest/eslint-plugin": "^1.1.25",
    "@zemd/eslint-react": "workspace:*",
    "@zemd/eslint-common": "workspace:*",
    "eslint-plugin-playwright": "^2.2.0",
    "eslint-plugin-storybook": "^0.11.2",
    "eslint-plugin-turbo": "^2.4.0"
  },
  "devDependencies": {
    "@types/eslint": "catalog:",
    "@types/eslint__js": "catalog:",
    "@zemd/tsconfig": "catalog:",
    "eslint": "catalog:",
    "tsup": "catalog:",
    "typescript": "catalog:"
  },
  "scripts": {
    "build": "tsup-node --minify",
    "dev": "tsup-node --watch"
  }
}
